@{
    ViewBag.Title = "ProductGeneratorMgmt";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}



<div ng-controller="ProductGeneratorCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Product Generator Management</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.ddmake.$invalid }">
                                    <label class="control-label">Make *:-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddmake.$invalid }">
                                    <div class="input-group">
                                        <select id="ddMake" multiple="multiple" ng-model="model.SelectedMake" name="ddmake"></select>
                                        <p ng-show="submitted && form.ddmake.$invalid" class="help-block">Please Select Make.</p>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.ddModel.$invalid }">
                                    <label class="control-label">Model *:-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddModel.$invalid }">
                                    <div class="input-group">
                                        <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddModel.$invalid }">
                                            <div class="input-group">
                                                <select id="ddModel" name="ddModel" multiple="multiple" ng-model="model.SelectedModel"></select>
                                                <p ng-show="submitted && form.ddModel.$invalid" class="help-block">Please Select Model.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.ddTrim.$invalid }">
                                    <label class="control-label">Trim *:-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddTrim.$invalid }">
                                    <div class="input-group">
                                        <select id="ddTrim" name="ddTrim" multiple="multiple" ng-model="model.SelectedTrim" style="overflow:scroll"></select>
                                        <p ng-show="submitted && form.ddTrim.$invalid" class="help-block">Please Select Trim.</p>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.ddYear.$invalid }">
                                    <label class="control-label">Year *:-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddYear.$invalid }">
                                    <div class="input-group">
                                        <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.ddYear.$invalid }">
                                            <div class="input-group">
                                                <select id="ddYear" name="ddYear" multiple="multiple" ng-model="model.SelectedYear"></select>
                                                <p ng-show="submitted && form.ddYear.$invalid" class="help-block">Please Select Year.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.Name.$invalid }">
                                    <label class="control-label">Product Name *:-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.Name.$invalid }">
                                    <div class="input-group">
                                        <input id="Name" name="Name" type="text" maxlength="255" class="form-control" required ng-model="model.Name">
                                        <p ng-show="submitted && form.Name.$invalid" class="help-block">Product Name is required.</p>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2" ng-class="{ 'has-error' : submitted && form.Component.$invalid }">
                                    <label class="control-label">Component Category* :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3" ng-class="{ 'has-error' : submitted && form.Component.$invalid }">
                                    <div class="input-group">
                                        <select id="idParent" name="Component" class="form-control" required ng-model="model.idComponent">
                                            <option value="">--Select Component Category--</option>
                                            <option ng-repeat="ct in Categorylist | orderBy : 'Name'" value="{{ct.id}}">{{ct.Name}}</option>
                                        </select>
                                        <p ng-show="submitted && form.Component.$invalid" class="help-block">Please Select Component.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Description :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <input id="Description" type="text" class="form-control" ng-model="model.Description">
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Manage Stock :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <input id="ManageStock" type="checkbox" class="checkbox" ng-model="model.ManageStock" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">SKU :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <input id="SKU" type="text" class="form-control" ng-model="model.SKU">
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Sale Price Date :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input type="text" class="form-control" name="dateranger" id="daterange" ng-model="model.Date">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Image URL :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <div class="input-group col-sm-4">
                                            <img ng-if="model.ImageUrl != ''" ng-src="~/MediaUploads/{{model.ImageUrl}}" class="img-polaroid" ng-model="model.ImageUrl" style="height:100px;width:100px;border: 2px solid #36a9e1" err-src="~/assets/img/no_image.jpg" />
                                        </div>
                                        <br ng-hide="model.ImageUrl == ''" />
                                        <div class="input-group col-sm-4">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Product" ng-click="FetchMedia()">Select Image</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">SKU Image URL :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group col-sm-4" ng-hide="model.SKUImageUrl == ''">
                                        <img ng-if="model.SKUImageUrl != ''" ng-src="~/MediaUploads/{{model.SKUImageUrl}}" class="img-polaroid" ng-model="model.SKUImageUrl" style="height:100px;width:100px;border: 2px solid #36a9e1" err-src="~/assets/img/no_image.jpg" />
                                    </div>
                                    <br ng-hide="model.SKUImageUrl == ''" />
                                    <div class="input-group col-sm-4">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SKUImage" ng-click="FetchMediaSKU()">Select Image</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Regular Price :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <input id="RegularPrice" type="text" class="form-control" money ng-model="model.RegularPrice">
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2">
                                    <label class="control-label">Sale Price :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <input id="SalePrice" type="text" class="form-control" money ng-model="model.SalePrice">
                                    </div>
                                </div>
                            </div>
                        </div>
