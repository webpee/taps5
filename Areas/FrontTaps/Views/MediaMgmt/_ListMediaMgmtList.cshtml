<table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
    <thead>
        <tr>
            <th style="width:5%">No</th>
            <th style="width:20%">Image</th>
            <th style="width:20%">File Name</th>
            <th style="width:20%">Author</th>
            <th style="width:10%">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in list1 | filter:SearchText">
            <td>
                {{$index+1}}
            </td>
            <td>
                <img  ng-src="~/MediaUploads/{{o.FileName}}" height="50px" width="50px">
            </td>
            <td>
                {{o.Name}}
            </td>
            <td>
                {{o.Author}}
            </td>
            <td class="center">
                <button type="button" class="btn btn-primary" data-id="{{o.id}}" data-toggle="modal" data-target="#Media-1" ng-click="EditMedia(o)"><i class="fa fa-edit"></i></button>
                <a href="#" class="btn btn-danger" ng-really-message="Are you sure you want to Delete this Record ?" ng-really-click="DeleteMedia(o.id)" title="Delete" data-rel="tooltip">
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>
<div class="row show-hide-animation">
    <div class="col-md-12">
        <pagination class="pull-right" data-boundary-links="true" page="pager.PageNum"
                    total-items="pager.Total"
                    items-per-page="pager.PageSize"
                    max-size="10"
                    on-select-page="GetAllMedia(page)"></pagination>
    </div>
</div>
<div class="modal fade" id="Media-1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: #36a9e1">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" style="color:white">Edit Media</h4>
            </div>
            <div class="modal-body">
                <form role="form"
                      id="form"
                      name="form"
                      class="form-horizontal"
                      novalidate
                      ng-submit="formSubmit()">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-sm-2">
                                <label>
                                    <label class="control-label">Name :-</label>
                                </label>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <input id="Name" type="text" maxlength="255" class="form-control" ng-required="true" ng-model="model.Name">
                            </div>
                            <div class="col-lg-4 col-sm-4">
                                <img ng-if="model.Name != ''" ng-src="~/MediaUploads/{{model.FileName}}" height="50px" width="50px">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Author :-</label>
                        <div class="input-group col-sm-10">
                            <input id="Author" type="text" maxlength="255" class="form-control" ng-model="model.Author">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Caption :-</label>
                        <div class="input-group col-sm-10">
                            <input id="Caption" type="text" maxlength="255" class="form-control" ng-model="model.Caption">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">AltText :-</label>
                        <div class="input-group col-sm-10">
                            <input id="AltText" type="text" maxlength="50" class="form-control" ng-model="model.AltText">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description :-</label>
                        <div class="input-group col-sm-10">
                            <textarea id="Description" ck-editor class="form-control" ng-model="model.Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" data-dismiss="modal" ng-click="Save(model)">Save</button>
                        <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/adapters/jquery.js"></script>