@{
    ViewBag.Title = "Faq";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="FaqCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>FAQ & Help Management</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <label class="control-label">Type :-</label>
                            <div class="input-group col-sm-10">
                                <input id="Type" type="text" maxlength="50" class="form-control" ng-required="true" ng-model="model.Type">
                                @*<select id="Colour" name="Colour" class="form-control" ng-model="model.Type" ng-required="true" ng-disabled="model.id != 0"  >
                                        <option value="">--Select Type--</option>
                                        <option value="About Us">About Us</option>
                                        <option value="Taps Warranty">Taps Warranty</option>
                                        <option value="Terms & Condition">Terms & Condition</option>
                                        <option value="Privacy Policy">Privacy Policy</option>
                                    </select>*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Seq :-</label>
                            <div class="input-group col-sm-10">
                                <input id="Seq" type="text" maxlength="7" class="form-control" ng-required="true" ng-model="model.Seq">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description :-</label>
                            <div class="input-group col-sm-10">
                                <textarea id="Description" name="Description" ck-editor class="ckeditor" ng-model="model.Description"></textarea>
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="Create(model)">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>FAQ Management List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-1">
                        <h4>Search :</h4>
                    </div>
                    <div class="col-lg-3">
                        <input id="Search" type="text" maxlength="50" class="form-control" ng-model="model.SearchText5" ng-change="BlankSearch(model.SearchText5)" ng-enter="filter(model.SearchText5)" ng-focus="filter(SearchText5)" ng-blur="filter(model.SearchText5)">
                    </div>
                    <br /><br />
                    @{ Html.RenderPartial("_ListFaqMgmtList"); }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/app/controllers/Faq/Faq.js"></script>
