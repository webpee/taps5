
@{
    ViewBag.Title = "Workshop Margin";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="WorkshopMarginCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Authorized Workshop Margin List </h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-4">
                        <label>This Month Total Margin : {{ThisMonthTotal}}</label>
                    </div>
                    <div class="col-lg-2">
                        <select id="Condition" class="form-control" ng-model="model.year" ng-change="GetAllWorkshopMargin()">
                            <option value="">---Select Year---</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                            <option value="2018">2018</option>
                            <option value="2019">2019</option>
                            <option value="2020">2020</option>
                            <option value="2021">2021</option>
                            <option value="2022">2022</option>
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <select id="Condition" class="form-control" ng-model="model.month" ng-change="GetAllWorkshopMargin()">
                            <option value="">---Select Month---</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="col-lg-1">
                        <h4>Search :</h4>
                    </div>
                    <div class="col-lg-3">
                        <input id="Search" type="text" maxlength="50" class="form-control" ng-model="model.SearchText5" ng-change="BlankSearch(model.SearchText5)" ng-enter="filter(model.SearchText5)" ng-focus="filter(SearchText5)" ng-blur="filter(model.SearchText5)">
                    </div>
                    <br /><br />
                    <table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th style="width:20%;">No</th>
                                @*<th style="width:20%;">Order No.</th>*@
                                <th style="width:50%;">Workshop Name</th>
                                @*<th style="width:20%;">Margin</th>*@
                                <th style="width:30%;">Total Margin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="o in filtered = (list1 | filter:searchFilter1:strict) | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit">
                                <td> {{$index+1}} </td>
                                @*<td> {{o.id}}  </td>*@
                                <td> {{o.AuthorizeWorkshopName}}  </td>
                                @*<td>{{o.AuthorizeWorkshopCommission}} </td>*@
                                <td>{{o.TotalCommission}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center" style="font-size:18px"  ng-if="list1.length == 0">
                        <label> No data found</label>
                    </div>
                    <div class="row show-hide-animation">
                        <div class="col-md-12">
                            <pagination page="currentPage" class="pull-right" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit" data-boundary-links="true"></pagination>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/app/controllers/WorkshopMgmt/WorkshopMargin.js"></script>