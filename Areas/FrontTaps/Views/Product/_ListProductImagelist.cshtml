<table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
    <thead>
        <tr>
            <th style="width:10%;text-align:center;">No</th>
            <th style="text-align: center;">Product Name</th>
            <th style=" text-align: center;">Image</th>
            <th style="width: 10%; text-align: center;">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in ProductImagelst">
            <td style="text-align: center;">
                <input type="hidden" value="{{o.id}}" ng-model="o.id" />
                {{$index+1}}
            </td>
            <td>
               {{o.ProductName}}

            </td>
            <td>
                <img ng-src="~/MediaUploads/{{o.MediaImage}}" height="50px" width="50px">
            </td>

            <td class="center">                
                <a href="#" class="btn btn-danger" ng-really-message="Are you sure, you want to Delete this Record ?" ng-really-click="DeleteProductImage(o.id)" title="Delete" data-rel="tooltip">
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>       
    </tbody>
</table>
