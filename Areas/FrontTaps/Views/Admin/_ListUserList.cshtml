<table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable" @*ng-show="list2 != null && list2.length >= 0"*@>
    <thead>
        <tr>
            <th style="width:4%">No</th>
            <th style="width:15%">User Name</th>
            <th style="width:15%">User Role</th>
            <th style="width:8%">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in UserInRoleList | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit" >
            <td> {{$index + 1}}   </td>
            <td> {{o.user.UserName}}   </td>
            <td> {{o.roles[0]}}   </td>
            <td>
                <a href="#" class="btn btn-danger" ng-really-message="Are you sure to Delete this Record ?" ng-really-click="DeleteRole(o)" title="Delete" data-rel="tooltip">
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>

<div class="row show-hide-animation">
    <div class="col-md-12">
        <pagination page="currentPage" class="pull-right" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit" data-boundary-links="true"></pagination>
    </div>
</div>