
@{
    ViewBag.Title = "_ListVendorList";
}
<table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
    <thead>
        <tr>
            <th style="width:3%">No</th>
            <th style="width:8%">Vendor Code</th>
            <th style="width:8%">Company Name</th>
            <th style="width:8%">Registration No</th>
            <th style="width:10%">Billing Address</th>
            <th style="width:8%">PostCode</th>
            <th style="width:8%">Phone</th>
            <th style="width:8%">Fax</th>
            <th style="width:8%">Area</th>
            <th style="width:10%">Email</th>
            <th style="width:10%">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in filtered = (list1| filter:searchFilter1:strict) | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit">
            <td>
                {{$index+1}}
            </td>
            <td>
                {{o.VendorCode}}
            </td>
            <td>
                {{o.CompanyName}}
            </td>
            <td>
                {{o.RegistrationNo}}
            </td>
            <td>
                {{o.BillingAddress1}}
            </td>
            <td>
                {{o.PostCode}}
            </td>
            <td>
                {{o.Phone1}}<br />{{o.Phone2}}
            </td>
            <td>
                {{o.Fax1}}<br />{{o.Fax2}}
            </td>
            <td>{{o.Area}}</td>
            <td>{{o.Email}}</td>
            <td class="center">
                <a href="#" class="btn btn-info" ng-click="FetchVendorById(o)" ng-show="!o.LockStatus" title="Edit" data-rel="tooltip">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="#" class="btn btn-danger" ng-really-message="Are you sure to Delete this Record ?" ng-really-click="DeleteVendor(o.id)" title="Delete" data-rel="tooltip">
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>
<div class="row show-hide-animation">
    <div class="col-md-12">
        <pagination page="currentPage" class="pull-right" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit" data-boundary-links="true"></pagination>
    </div>
</div>





