<table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
    <thead>
        <tr>
            <th style="width:4%">No</th>
            <th style="width:10%">Country Code</th>
            <th style="width:25%">Country Name</th>
            <th style="width:15%">Short Name</th>
            <th style="width:8%">Sequence</th>
            <th style="width:8%">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="o in filtered = (list1| filter:searchFilter1:strict) | orderBy:'Country' | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit">
            <td>{{$index+1}}</td>
            <td>
                {{o.Code}}
            </td>
            <td>
                {{o.Country}}
            </td>
            <td>
                {{o.ShortName}}
            </td>
            <td>
                {{o.Seq}}
            </td>
            <td class="center">
                <a href="#" class="btn btn-info" ng-click="FetchCountryMgmtById(o)" ng-show="!o.LockStatus" title="Edit" data-rel="tooltip">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="#" class="btn btn-danger" ng-really-message="Are you sure to Delete this Record ?" ng-really-click="DeleteCountry(o.id)" title="Delete" data-rel="tooltip">
                    <i class="fa fa-trash-o"></i>
                </a>
            </td>
        </tr>
    </tbody>
</table>
<div class="row show-hide-animation">
    <div class="col-md-12">
        <pagination page="currentPage" class="pull-right" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit" data-boundary-links="true"></pagination>
    </div>
</div>





