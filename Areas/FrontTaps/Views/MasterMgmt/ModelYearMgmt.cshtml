@{
    ViewBag.Title = "ModelYearMgmt";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="ModelYearMgmtCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Model Year Management</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <label class="control-label">Model :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Name" name="Name" ng-model="model.idModel" class="form-control" ng-required="true">
                                    <option value="">-- Select Model Name --</option>
                                    <option ng-repeat="o in Model" value="{{o.id}}">{{o.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Trim :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Trim" name="Trim" ng-model="model.idTrim" class="form-control" ng-required="true">
                                    <option value="">-- Select Trim Name --</option>
                                    <option ng-repeat="o in Trim" value="{{o.id}}">{{o.Trim}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Engine :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Engine" name="Engine" ng-model="model.idEngine" class="form-control" ng-required="true">
                                    <option value="">-- Select Engine Name --</option>
                                    <option ng-repeat="o in EngineName" value="{{o.id}}">{{o.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Transmission :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Transmission" name="Transmission" ng-model="model.idTransmission" class="form-control" ng-required="true">
                                    <option value="">-- Select Transmission Name --</option>
                                    <option ng-repeat="o in TransmissionName" value="{{o.id}}">{{o.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Year :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Year" name="Year" ng-model="model.idYear" class="form-control" ng-required="true">
                                    <option value="">-- Select Year --</option>
                                    <option ng-repeat="o in Year" value="{{o.id}}">{{o.Year}}</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="CreateModelYear(model)">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Model Year Management List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-1">
                        <h4>Search :</h4>
                    </div>
                    <div class="col-lg-3">
                        <input id="Search" type="text" maxlength="50" class="form-control" ng-model="model.SearchText5" ng-change="BlankSearch(model.SearchText5)" ng-enter="filter(model.SearchText5)" ng-focus="filter(SearchText5)" ng-blur="filter(model.SearchText5)">
                    </div>
                    <br /><br />
                    @{ Html.RenderPartial("_ListModelYearMgmtList"); }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/app/controllers/MasterMgmt/ModelYearMgmt.js"></script>


