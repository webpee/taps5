@{
    ViewBag.Title = "PageMgmt";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="PageMgmtCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Page Management</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <label class="control-label">Title :-</label>
                            <div class="input-group col-sm-4">
                                <input id="Title" type="text" maxlength="255" class="form-control" ng-required="true" ng-model="model.Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description :-</label>
                            <div class="input-group col-sm-4">
                                <input id="Description" type="text" class="form-control" ng-required="true" ng-model="model.Description">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Parent :-</label>
                            <div class="input-group col-sm-4">
                                <select id="Parent" name="Parent" ng-model="model.Parent" class="form-control">
                                    <option value="">-- Select Category --</option>
                                    <option ng-repeat="o in lstParent" value="{{o.id}}">{{o.Title}} | {{o.Description}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Page Type :-</label>
                            <div class="input-group col-sm-4">
                                <select id="PageType" name="PageType" ng-model="model.PageType" class="form-control" ng-required="true">
                                    <option value="">-- Select Page Type --</option>
                                    <option value="Page">Page</option>
                                    <option value="Post">Post</option>
                                    <option value="News">News</option>
                                    <option value="Events">Events</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2 col-sm-1">
                                    <label class="control-label">Page Image URL :-</label>
                                </div>
                                <div class="col-lg-3 col-sm-3">
                                    <div class="input-group">
                                        <div class="input-group col-sm-4" ng-hide="model.PageImageUrl == ''">
                                            <img ng-if="model.PageImageUrl != ''" ng-src="~/MediaUploads/{{model.PageImageUrl}}" ng-model="model.PageImageUrl" height="100px" width="100px" style="border: 2px solid #36a9e1" />
                                        </div>
                                        <br ng-hide="model.PageImageUrl == ''" />
                                        <div class="input-group col-sm-4">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#page" ng-click="FetchMedia()">Select Image</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Slug :-</label>
                            <div class="input-group col-sm-4">
                                <input id="Slug" type="text" maxlength="255" class="form-control" ng-required="true" ng-model="model.Slug">
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="CreatePageMgmt(model)">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <br />
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Page Meta List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="box-content">
                        @{ Html.RenderPartial("_ListPageMetaList"); }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Page Management List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-1">
                        <h4>Search :</h4>
                    </div>
                    <div class="col-lg-3">
                        <input id="Search" type="text" maxlength="50" class="form-control" ng-model="SearchText">
                    </div>
                    <br /><br />
                    @{ Html.RenderPartial("_ListPageMgmtList"); }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="page" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background: #36a9e1">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">Select Image</h4>
                </div>
                <div class="modal-body">
                    <div class="box-content">
                        <form role="form"
                              id="form"
                              name="form"
                              class="form-horizontal"
                              novalidate
                              ng-submit="formSubmit()">
                            <div class="form-group">
                                <div class="row">
                                    <table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Image</th>
                                                <th>File Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="o in ImageList | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit">
                                                <td>
                                                    {{$index+1}}
                                                </td>
                                                <td>
                                                    <img ng-src="~/MediaUploads/{{o.FileName}}" height="50px" width="50px">
                                                </td>
                                                <td>
                                                    {{o.Name}}
                                                </td>
                                                <td class="center">
                                                    <button type="button" class="btn btn-primary" ng-model="model.ImageName" ng-click="SelectImage(o.FileName)" data-dismiss="modal">Select</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                        @*<pagination page="currentPage" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit"></pagination>*@

                                        <pagination class="pull-right" data-boundary-links="true" page="pager.PageNum"
                                                    total-items="pager.Total"
                                                    items-per-page="pager.PageSize"
                                                    max-size="10"
                                                    on-select-page="FetchMedia(page)"></pagination>

                                    </table>
                                </div>
                            </div>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/app/controllers/PageMgmt/PageMgmt.js"></script>
