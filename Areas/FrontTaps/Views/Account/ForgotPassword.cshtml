@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/FrontTaps/Views/Shared/_LayoutLogin.cshtml";    
    
}
<div ng-controller="SampleCtrl">
    <div class="row">
        <div class="login-box">
            <h2>Reset Your Passowrd Via Email</h2>
            <form class="form-horizontal" name="LoginForm">
                <fieldset>

                    <input class="input-large col-xs-12" name="Email" id="Email" ng-model="model.Email" type="text" placeholder="Your Username" />

                    <label class="input-large col-xs-12"><a href="~/FrontTaps/Account/Register" id="Register">New User</a></label>
                    <div class="clearfix"></div>

                    <label class="input-large col-xs-12"><a href="~/FrontTaps/Account/Index" id="Register">Login</a></label>
                    <div class="clearfix"></div>

                </fieldset>
                @*<button type="submit" ng-disabled="LoginForm.$invalid" ng-click="Login(event,LoginForm)" class="btn btn-primary col-xs-12">Login</button>*@
                <button type="submit" ng-disabled="LoginForm.$invalid" class="btn btn-primary col-xs-12" ng-click="ResetPassword()">Reset</button>

            </form>
            <hr>
        </div>
    </div>
</div>
<script src="~/app/controllers/Account/ForgotPassword.js"></script>