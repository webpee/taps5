
@{
    ViewBag.Title = "BlacklistedVehicle";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="BlacklistedVehicleCtrl">

    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>BlackListed Vehicle</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <label class="control-label">Engine Number :-</label>
                            <div class="input-group col-sm-4">
                                <input id="EngineNo" type="text" maxlength="50" class="form-control" ng-required="true" ng-model="model.EngineNo">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Registration Number :-</label>
                            <div class="input-group col-sm-4">
                                <input id="RegistrationNo" type="text" maxlength="50" class="form-control" ng-required="true" ng-model="model.RegistrationNo">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chassis Number :-</label>
                            <div class="input-group col-sm-4">
                                <input id="ChassisNo" type="text" maxlength="50" class="form-control" ng-required="true" ng-model="model.ChassisNo">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Date of Loss :-</label>
                            <div class="input-group col-sm-4">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input class="form-control date-picker" ng-required="true" ng-model="model.DateofLoss" id="DateofLoss" data-date-format="mm/dd/yyyy" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Remarks :-</label>
                            <div class="input-group col-sm-4">
                                <textarea id="Remarks" class="form-control" ng-model="model.Remarks"></textarea>
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="CreateBlackListedVehicle(model)">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>BlackListed Vehicle List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-1">
                        <h4>Search :</h4>
                    </div>
                    <div class="col-lg-3">
                        <input id="Search" type="text" maxlength="50" class="form-control" ng-model="model.SearchText5" ng-change="BlankSearch(model.SearchText5)" ng-enter="filter(model.SearchText5)" ng-focus="filter(SearchText5)" ng-blur="filter(model.SearchText5)">
                    </div>
                    <br /><br />
                    @{ Html.RenderPartial("_ListBlackListedVehicleList"); }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/app/controllers/BlacklistVehicle/BlacklistedVehicle.js"></script>
