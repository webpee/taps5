@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="ChangePassCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Account Settings</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <div class="form-group">
                            <label class="control-label">Old Password :-</label>
                            <div class="input-group col-sm-4">
                                <input id="OldPassword" name="OldPassword" type="password" maxlength="255" class="form-control" ng-required="true" ng-model="model.OldPassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">New Password :-</label>
                            <div class="input-group col-sm-4">
                                <input id="NewPassword" name="NewPassword" type="password"  maxlength="255" class="form-control" ng-required="true" ng-model="model.NewPassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Retype Password :-</label>
                            <div class="input-group col-sm-4">
                                <input id="RetypePassword" name="ConfirmPassword" type="password"  maxlength="255" class="form-control" ng-required="true" ng-model="model.ConfirmPassword" nx-equal-ex="model.NewPassword">
                                <span style="color:red" ng-show="form.ConfirmPassword.$dirty && form.ConfirmPassword.$invalid">
                                    <span ng-show="form.ConfirmPassword.$error.nxEqualEx">Passwords do not match!</span>
                                </span>
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="ChangeUserPassword(model)">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/app/controllers/Account/ChangePassword.js"></script>