@{
    ViewBag.Title = "RecommendedVehicle";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "BlacklistedVehicle";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="RecommondedVehicleCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Recommended Vehicle List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Vendor :-</label>
                            <div class="col-sm-8">
                                <select id="Vendor" name="Vendor" ng-model="model.idVendor" class="form-control">
                                    <option value="">-- Select Vendor --</option>
                                    <option ng-repeat="o in lstVendor" value="{{o.id}}">{{o.UserName}}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Flag :-</label>
                            <div class="input-group col-sm-6">
                                <select id="Flag" name="Flag" ng-model="model.Flag" class="form-control">
                                    <option value="">Show All</option>
                                    <option value="true">Approved</option>
                                    <option value="false">Not Approved</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <div class="input-group col-sm-4">
                                <button type="button" class="btn btn-primary" ng-click="Search(model)">Search</button>
                            </div>
                        </div>
                        @*<input id="Search" type="text" maxlength="50" class="form-control" ng-model="SearchText">*@
                    </div>
                    <br /><br />
                    @{ Html.RenderPartial("_ListRecommendedVehicleList"); }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/app/controllers/RecommondedVehicle/RecommondedVehicle.js"></script>