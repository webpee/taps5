@{
    ViewBag.Title = "ProductImages";
    Layout = "~/Areas/FrontTaps/Views/Shared/_Layout.cshtml";
}

<div ng-controller="ProductImageCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Product Images</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form"
                          id="form"
                          name="form"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <input type="hidden" value="{{model.id}}" ng-model="model.id" />
                        <div class="form-group">
                            <label class="control-label">Product Name:-</label>
                            <div class="input-group col-sm-4">
                                <select id="idProduct" name="idProduct" ng-model="model.idProduct" class="form-control" required ng-change="GetProductImage()">
                                    <option value="">-- Select Product --</option>
                                    <option ng-repeat="o in Product" value="{{o.id}}">{{o.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Image:-</label>
                            <div class="input-group col-sm-4">
                                <button type="button" class="btn btn-primary" data-toggle="modal" ng-model="model.idMedia" data-target="#Product" ng-click="FetchMedia()">Select Image</button>
                            </div>
                        </div>
                        <br />
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary" ng-disabled="!form.$valid" ng-click="AddImage()">Save</button>
                            <button type="reset" class="btn" ng-click="Reset()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header" data-original-title>
                    <h2><i class="fa fa-user"></i><span class="break"></span>Product Image List</h2>
                    <div class="box-icon">
                        <a href="table.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    @{ Html.RenderPartial("_ListProductImagelist"); }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="Product" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background: #36a9e1">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" style="color:white">Select Images</h4>
                </div>
                <div class="modal-body">
                    <form role="form"
                          id="form1"
                          name="form1"
                          class="form-horizontal"
                          novalidate
                          ng-submit="formSubmit()">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-1">
                                    <h4>Search</h4>
                                </div>
                                <div class="col-lg-3">
                                    <input id="Search" type="text" maxlength="50" class="form-control" ng-model="model.SearchText3" ng-change="CheckSearchProduct()" ng-enter="FetchMedia(1)" @*ng-blur="FetchMedia(1)"*@>
                                </div>
                                <div class="col-lg-8">
                                    <pagination class="pull-right" data-boundary-links="true" page="pager.PageNum"
                                                total-items="pager.Total"
                                                items-per-page="pager.PageSize"
                                                max-size="20"
                                                on-select-page="FetchMedia(page)"></pagination>
                                </div>
                                <br /><br />
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-8">

                                    </div>
                                    <div class="col-lg-2" style="float:right">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="FetchImages()">Submit</button>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <table class="table table-striped table-bordered table-condensed bootstrap-datatable datatable">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>Image</th>
                                            <th>File Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="o in ImageList">
                                            <td>
                                                {{$index+1}}
                                            </td>
                                            <td style="text-align:center;">
                                                <img ng-src="~/MediaUploads/{{o.FileName}}" height="50px" width="50px">
                                            </td>
                                            <td>
                                                {{o.Name}}
                                            </td>
                                            <td>
                                                <input type="checkbox" id="chkStatus" class="checkbox" checklist-model="model.ImgList" checklist-value="o" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/app/controllers/ProductMgmt/ProductImage.js"></script>

